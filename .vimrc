filetype plugin indent on
set tabstop=4
set shiftwidth=4
set expandtab
set number
set relativenumber

set showcmd
set showmode
" Show file stats
set ruler

set backspace=indent,eol,start

" Status bar
set laststatus=2

" enable syntax processing
syntax enable 

" highlight matching [{()}]
set showmatch

" highlight matches
set hlsearch

colorscheme desert
